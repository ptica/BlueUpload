<div class="thumb">
	<div class="img-thumbnail">
	{{#if error}}
		<b>{{name}}</b>
		<div><span class="label label-danger">{{i18n "Error"}}</span> {{i18n error}}</div>
	{{else}}
		<span data-delete>&times;</span>
		<img src="{{thumbnailUrl}}" alt="{{name}}">
		<input type="hidden" name="data[Upload][Upload][]" value="{{id}}" id="UploadUpload{{id}}">
	{{/if}}
	</div>
</div>
